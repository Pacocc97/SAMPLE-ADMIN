  <div
    class="mx-auto flex max-w-screen-xl flex-wrap items-center justify-between px-4"
  >
    <a href="/" class="flex items-center">
      <img
        src={`https://d26xfdx1w8q2y3.cloudfront.net/${icbLogo?.path}/${icbLogo?.original}`}
